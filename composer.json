{
    "name": "openeuropa/oe_search",
    "description": "Search features for the OpenEuropa project.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "drupal/core": "^9.4 || ^10",
        "drupal/search_api": "^1.27",
        "http-interop/http-factory-guzzle": "^1.0",
        "openeuropa/europa-search-client": "^1.0.0-alpha4",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "require-dev": {
        "composer/installers": "^1.5",
        "drupal/core-composer-scaffold": "^9.4 || ^10",
        "drupal/core-dev": "^9.4 || ^10",
        "drupal/http_request_mock": "^1.0",
        "drush/drush": "^11.1",
        "openeuropa/code-review": "^2.0.0-alpha6",
        "openeuropa/oe_multilingual": "dev-master",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0-beta6",
        "phpspec/prophecy-phpunit": "^2"
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_search\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEuropa\\Tests\\EuropaSearchClient\\Traits\\": "./vendor/openeuropa/europa-search-client/tests/src/Traits",
            "Drupal\\Tests\\oe_search\\": "./tests/src/"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./build"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "phpro/grumphp": true,
            "php-http/discovery": true
        }
    }
}
